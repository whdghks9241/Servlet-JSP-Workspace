	function displayLoginFail() {
		// 팝업으로 표시할 오류메세지
		alert("로그인에 실패 하였습니다.");
	}
</script>
<!-- 
	만약에 로그인인 상태일경우 로그인 버튼을 숨기고 싶고 로그아웃 버튼이 보이게 하고 싶은 경우
 -->
	<%
 	// 만약에 password 값이 존재할 경우 빈(null)값이 아닐경우
 	if (session.getAttribute("PASSWORD") != null) {
 	%>
 		<a href="Logout.jsp">로그아웃</a>	
	<%
	} else {
	%>
<a herf = "login.jsp">로그인</a>
	<%
 	}
 
